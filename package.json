{
  "name": "root",
  "private": true,
  "scripts": {
    "clear-all": "lerna clean && rimraf node_modules",
    "build": "lerna run  --stream --sort build",
    "start": "lerna run --parallel --stream --sort start",
    "doc": "lerna run --parallel --stream --sort doc",
    "test": "lerna run --parallel --stream --sort test",
    "new": "plop",
    "publish": "lerna publish",
    "lint": "lerna run --parallel --stream --sort lint",
    "clear:readme": "esno scripts/clearReadme.ts"
  },
  "devDependencies": {
    "@umijs/utils": "^4.0.0-rc.5",
    "cz-conventional-changelog": "^3.3.0",
    "esno": "^0.14.1",
    "lerna": "^6.4.1",
    "plop": "^2.7.4",
    "rimraf": "^4.0.7"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
