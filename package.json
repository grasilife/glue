{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/doc",
    "packages/glue-components",
    "packages/glue-markdown-loader",
    "packages/glue-touch-emulator"
  ],
  "scripts": {
    "clear-all": "lerna clean && yarn workspaces run clean",
    "build": "lerna run --stream --sort build",
    "start": "lerna run --stream --sort start",
    "test": "lerna run --stream --sort test",
    "new": "plop",
    "publish": "lerna publish",
    "lint": "lerna run --stream --sort lint"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "lerna": "^3.22.1",
    "plop": "^2.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
