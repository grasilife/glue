{
  "private": false,
  "name": "glue-components",
  "version": "0.0.2-alpha.0",
  "description": "Stencil Component Starter",
  "main": "dist/index.cjs.js",
  "module": "dist/custom-elements/index.js",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/custom-elements/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/glue-components/glue-components.esm.js",
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build --docs",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "lint:eslint": "eslint src/**/*{.ts,.tsx} --ignore-path .gitignore  --fix",
    "lint:prettier": "prettier --ignore-path .gitignore --write .",
    "lint": "pnpm  lint:eslint && pnpm  lint:prettier"
  },
  "dependencies": {
    "@glue/markdown-loader": "0.0.2-alpha.0",
    "@glue/touch-emulator": "^0.0.2-alpha.0",
    "@stencil/core": "^2.5.2",
    "animejs": "^3.2.1",
    "intersection-observer": "^0.12.0"
  },
  "license": "MIT",
  "gitHead": "092134cf700bfbc7245a6bbc576d5cee3d1b8145",
  "devDependencies": {
    "@stencil/eslint-plugin": "^0.4.0",
    "@stencil/less": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "classnames": "^2.2.6",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.25.1",
    "prettier": "^2.3.2",
    "typescript": "^4.4.2"
  }
}
